#include <stdio.h>
#include <stdlib.h>
#include <string.h>

/*7) Uma empresa vende o mesmo produto para quatro diferentes estados.
Cada estado possui uma taxa diferente de imposto sobre o produto.
Faça um programa em que o usuário entre com o valor e o estado de destino do produto e o programa retorne o preço final do produto acrescido do imposto do estado em que ele será vendido.
Se o estado digitado não for válido, mostrará uma mensagem de erro.

Estado      MG      SP      RJ      MS
Imposto     7%      12%     15%     8%          */

float produto,valor;
char estado[2];

int main()
{
    printf("Qual o Valor do Produto ? R$");
    scanf(" %f",&produto);
    printf("Para qual estado [MG] [SP] [RJ] [MS] ? ");
    scanf(" %s",estado);
        if ( !strcmp(estado,"MG") || !strcmp(estado,"mg")){
        valor=((produto)+(produto/100*7));
        printf("\nO valor do produto com Imposto sera : R$%.2f\n",valor);
        }else if ( !strcmp(estado,"SP") || !strcmp(estado,"sp")){
        valor=((produto)+(produto/100*12));
        printf("\nO valor do produto com Imposto sera : R$%.2f\n",valor);
        }else if ( !strcmp(estado,"RJ") || !strcmp(estado,"rj")){
            valor=((produto)+(produto/100*15));
            printf("\nO valor do produto com Imposto sera : R$%.2f\n",valor);
        }else if ( !strcmp(estado,"MS") || !strcmp(estado,"ms")){
                valor=((produto)+(produto/100*8));
                printf("\nO valor do produto com Imposto sera : R$%.2f\n",valor);
                    }else {
                    printf("\nERRO!!!\n");
                    }
    return 0;
}
