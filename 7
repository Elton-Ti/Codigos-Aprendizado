#include <stdio.h>
#include <stdlib.h>

/*4) Faça um programa que leia o salário de um trabalhador e o valor da prestação de um empréstimo. Se a prestação:
• For maior que 20% do salário, imprima: “Empréstimo não concedido.”
• Caso contrário, imprima: “Empréstimo concedido.” */

float salario,emprestimo,parcela,sal;

int main()
{
    printf("Qual o salario do trabalhador ? R$");
    scanf("%f",&salario);
    printf("Qual o valor do Emprestimo? R$");
    scanf("%f",&emprestimo);
    parcela=(emprestimo/10);
    sal=((salario/100)*20);
        if (sal<parcela){
        printf("\nEmprestimo nao concedido \n");
    }else{
        printf("\nEmprestimo concedido \n");
    }
    return 0;
}
