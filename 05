#include <stdio.h>
#include <stdlib.h>

/*6) Faça um programa que receba a altura e o sexo de uma pessoa e calcule e mostre seu peso ideal, utilizando as seguintes fórmulas (em que “h” corresponde à altura):
• Homens: (72,7 * h) – 58
• Mulheres: (62,1 * h) – 44,7*/

float altura,F,M;
char sexo;

int main()
{
    printf("Qual sua altura : ");
    scanf("%f",&altura);
    printf("Qual seu Sexo (M/F) :");
    scanf(" %c",&sexo);
    if(sexo=='M' || sexo=='m'){
        M=((72.7*altura)-58);
        printf("\n\nSeu peso ideal eh %.2f \n",M);
    }else if(sexo=='F' || sexo=='f') {
        F=(62.1*altura)-44.7;
        printf("\nSeu peso ideal eh %.2f",F);
    } else {
        printf("Nao foi possivel calcular.");
    }

    return 0;
}
